<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uz.algorithmgateway.tezkorakfa.presenter.windowdoordisegner.ui.Area
        android:id="@+id/sub_layout_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mullion" />

    <uz.algorithmgateway.tezkorakfa.presenter.windowdoordisegner.ui.Mullion
        android:id="@+id/mullion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:view_orientation="HORIZONTAL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_layout_1"
        app:layout_constraintBottom_toTopOf="@id/sub_layout_2" />

    <uz.algorithmgateway.tezkorakfa.presenter.windowdoordisegner.ui.Area
        android:id="@+id/sub_layout_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mullion"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
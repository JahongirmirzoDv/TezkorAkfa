<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="@dimen/item_space_min">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/layout_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/item_space_min">

            <LinearLayout
                android:id="@+id/liner1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/item_space_middle"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bg_order_found_circle" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_customer_name"
                    style="@style/TextView.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:layout_weight="2.4"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Bobur Abdullayev" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/size_fifty"
                    android:layout_height="@dimen/save_button_space"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/layout_back_color"
                    app:cardCornerRadius="@dimen/margin_seven">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_show_count" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextView.Title"
                            android:id="@+id/order_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="13dp"
                            android:text="â„– 1035" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/size_fifty"
                    android:layout_height="@dimen/save_button_space"
                    android:layout_marginLeft="@dimen/item_normal_padding"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/layout_back_color"
                    app:cardCornerRadius="@dimen/margin_seven">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_src_pdf" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextView.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:text="PDF da ochish"
                            android:textSize="12sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_space_middle"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/liner1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextView.Title"
                        android:id="@+id/window"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Derazalar soni : 8"
                        android:textSize="12sp" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextView.Title"
                        android:id="@+id/door"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eshik soni : 1"
                        android:textSize="12sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/edit"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:background="@drawable/back_item_order"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Tahrirlash"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/size_fifty"
                    android:layout_height="@dimen/size_sixty"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/layout_back_color"
                    app:cardCornerRadius="@dimen/margin_seven">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextView.Title"
                        android:id="@+id/comment"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:maxLines="4"
                        android:text="Izoh: Mijozga 10% chegirma qilinadi"
                        android:textSize="11sp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_space_middle"
                android:layout_marginTop="@dimen/item_space_min"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/liner2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextView.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:text="To'lov summasi: "
                            android:textSize="11sp" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextView.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3 500 000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_space_min">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextView.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Olinadigan to'lov: "
                            android:textSize="11sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/save_button_space"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/layout_back_color"
                            app:cardCornerRadius="@dimen/margin_seven">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="1 000 000"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/reject_order"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/save_button_space"
                        android:layout_gravity="bottom"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/color_red"
                        app:cardCornerRadius="@dimen/margin_seven">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextView.Title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Bekor qilish"
                                android:textSize="11sp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/config_order"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/save_button_space"
                        android:layout_gravity="bottom"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/blue"
                        app:cardCornerRadius="@dimen/margin_seven">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextView.Title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Yakunlash"
                                android:textSize="11sp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
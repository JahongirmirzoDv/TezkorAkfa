<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_light">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/layout_light"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:maxLines="1"
            android:paddingHorizontal="18dp"
            android:text="1500"
            android:textAppearance="@style/PrimaryTextStyle"
            android:textColor="#ffffff"
            android:textSize="36sp"
            app:layout_constraintEnd_toStartOf="@id/iv_backspace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="backspace"
            android:padding="10dp"
            android:src="@drawable/ic_backspace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.34"
            app:tint="@color/blue" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="1"
                android:text="1"
                android:textAppearance="@style/PrimaryTextStyle" />

            <TextView
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="2"
                android:text="2"
                android:textAppearance="@style/PrimaryTextStyle" />

            <TextView
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="3"
                android:text="3"
                android:textAppearance="@style/PrimaryTextStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="4"
                android:text="4"
                android:textAppearance="@style/PrimaryTextStyle" />

            <TextView
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="5"
                android:text="5"
                android:textAppearance="@style/PrimaryTextStyle" />

            <TextView
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="6"
                android:text="6"
                android:textAppearance="@style/PrimaryTextStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="7"
                android:text="7"
                android:textAppearance="@style/PrimaryTextStyle" />

            <TextView
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="8"
                android:text="8"
                android:textAppearance="@style/PrimaryTextStyle" />

            <TextView
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:tag="9"
                android:text="9"
                android:textAppearance="@style/PrimaryTextStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button" />

            <TextView
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button"
                android:gravity="center"
                android:text="0"
                android:tag="0"
                android:textAppearance="@style/PrimaryTextStyle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_button" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_button"
            android:gravity="center"
            android:text="Bekor qilish"
            android:textAppearance="@style/PrimaryTextStyle" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_button"
            android:gravity="center"
            android:text="Ok"
            android:textAppearance="@style/PrimaryTextStyle" />

    </LinearLayout>


</LinearLayout>
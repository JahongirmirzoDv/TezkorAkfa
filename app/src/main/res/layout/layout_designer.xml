<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uz.algorithmgateway.tezkorakfa.presenter.windowdoordisegner.ui.WindowDoorDesigner
        android:id="@+id/view_designer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/view_size_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_size_vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <uz.algorithmgateway.tezkorakfa.presenter.windowdoordisegner.ui.sizeview.SizeViewHorizontal
        android:id="@+id/view_size_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view_designer"
        app:layout_constraintStart_toStartOf="@id/view_designer"
        app:layout_constraintTop_toBottomOf="@id/view_designer" />

    <uz.algorithmgateway.tezkorakfa.presenter.windowdoordisegner.ui.sizeview.SizeViewVertical
        android:id="@+id/view_size_vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_designer"
        app:layout_constraintBottom_toBottomOf="@id/view_designer"
        app:layout_constraintEnd_toStartOf="@id/view_designer" />


</androidx.constraintlayout.widget.ConstraintLayout>